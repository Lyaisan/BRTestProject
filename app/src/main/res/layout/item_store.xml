<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:layout_marginLeft="@dimen/content_offset_small"
    android:layout_marginRight="@dimen/content_offset_small"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:foreground="@drawable/transparent_selector"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/content_offset_small">

        <ImageView
            android:id="@+id/logo_view"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_gravity="left"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/content_offset_small"
            android:layout_marginBottom="@dimen/content_offset_small"/>

        <LinearLayout
            android:id="@+id/info_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phone_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/content_offset_small" />

            <TextView
                android:id="@+id/address_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/blue_light"
                android:drawableLeft="@drawable/ic_action_place"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>